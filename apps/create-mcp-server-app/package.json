{
  "name": "create-mcp-server-app",
  "version": "0.1.8",
  "description": "Quickly create MCP server app",
  "author": "Boguan <786506@gmail.com>",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boguan/create-mcp-app.git"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "mcp-server-app",
    "mcp-app"
  ],
  "exports": "./dist/index.js",
  "bin": {
    "create-mcp-server-app": "./dist/index.js"
  },
  "files": [
    "dist",
    "docs",
    "boilerplate",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "typecheck": "tsc",
    "build": "tsup-node",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo node_modules",
    "start": "node dist/index.js",
    "lint": "eslint",
    "lint:fix": "pnpm lint --fix",
    "changeset": "changeset",
    "release": "changeset version",
    "pub:release": "pnpm build && npm publish",
    "prepublishOnly": "pnpm build && sed -i.bak '/\"@mcp\\/cli\": \"workspace:\\*\"/d' package.json",
    "postpublish": "mv package.json.bak package.json"
  },
  "dependencies": {
    "@clack/prompts": "^0.6.3",
    "@mcp/cli": "workspace:*",
    "chalk": "5.2.0",
    "commander": "^10.0.1",
    "execa": "^7.2.0",
    "fs-extra": "^11.2.0",
    "ora": "6.3.1",
    "sort-package-json": "^2.10.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.14.1",
    "tsup": "^8.4.0",
    "type-fest": "^3.13.1"
  }
}