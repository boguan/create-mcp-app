{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/@modelcontextprotocol/sdk/dist/esm/types.d.ts"]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}